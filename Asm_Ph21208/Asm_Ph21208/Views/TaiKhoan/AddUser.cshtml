@model Asm_Ph21208.Models.User
@{
    ViewData["Title"] = "AddUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 <!-- Cart view section -->
 <section id="aa-myaccount" >
   <div class="container">
     <div class="row">
       <div class="col-md-12">
        <div class="aa-myaccount-area">     
            <div class="row">
                <form asp-action="AddUser"  method="post">
              <div class="col-md-6">
                <div class="aa-myaccount-login">
                <h4>Đăng kí tài khoản</h4>
                 <div class="aa-login-form row">
                         <div class="form-group">
                  <label for="">Username<span>*</span></label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>
                         </div>
                   
                    <div class="form-group">
                        <label for="">Password<span>*</span></label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    <button type="submit" class="aa-browse-btn">Đăng ký</button>
                    <label class="rememberme" for="rememberme"><input type="checkbox" id="rememberme"> Remember me </label>
                    <p class="aa-lost-password"><a href="#">Quên mật khẩu?</a></p> 
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="aa-myaccount-register">                 
                 <h4>Thông tin</h4>
                 <div   class="aa-login-form" >
                    <label for="">Họ và tên<span>*</span></label>
                                 <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.RoleId, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                    <label for="">Gmail hoặc sđt<span>*</span></label>
                     <div class="form-group">
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                        </div>
                    </div>                  
                  </div>
                </div>
              </div>
              </form>
            </div>          
         </div>
       </div>
     </div>
   </div>
 </section>
 <!-- / Cart view section -->

